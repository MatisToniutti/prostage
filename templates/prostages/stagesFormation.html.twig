{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <br><br><br>
        <div class="row">
            <div class="col-3">
                <h2>Liste des stages</h2>
            </div>
            <div class="col offset-5">
                <a href="/formations" class="btn btn-primary">Filtrer par formation</a>
            </div>
            <div class="col offset-0">
                <a href="/entreprises" class="btn btn-primary">Filtrer par entreprise</a>
            </div>
        </div>
        <br><br>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Entreprise</th>
                    <th scope="col">Mission</th>
                    <th scope="col">Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for stage in formation.stages %}
                    <tr>
                        <th scope="row">{{stage.id}}</th>
                        <td>{{stage.titre}}</td>
                        <td>{{stage.entreprise.nom}}</td>
                        <td>{{stage.mission}}</td>
                        <td><a href="/stages/{{stage.id}}" class="btn btn-primary btn-sm">Détails</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}